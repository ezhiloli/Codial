<!DOCTYPE html>
<html>  
    <head>
        <title> <%= locals.title %></title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/home.css">
    </head>
</html>
    
<div class="home-page">
    <div class="app-heading">
        <h2 style="text-align: center"><%= title %> </h2>
    </div>
    <% if(locals.user){ %>
    <div id="feed-post">
        <h3> Make Your Post Here </h3>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea  name="content" id="post-section" placeholder="Hey Whats on your Mind ..." rows="3"></textarea>
            <input type="submit" value="POST" id="my-post">
        </form>

    </div>
    <% } %>

    <div class="user-post-container">
        <div class="user-inside-container">
            <h3> Posts List</h3>
            <ul>
            <% for (post of posts) { %>
                <%- include('_post') -%>
            <% } %>
       </ul>
    </div>

    </div>

</div>

<section id="user-friends">

    <h3> Friends </h3>

    <% for(friend of all_users) {%>

        <p>
            <a href="/users/profile/<%= friend.id %>">
                    <%= friend.name %>
            </a>
        </p>

    <% } %>

</section>